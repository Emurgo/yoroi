    "@storybook/react-native-server": "^5.3.23",
    "@testing-library/react-native": "^9.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.11.19",
