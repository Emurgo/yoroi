    "react-native-vector-icons": "^8.1.0",
    "react-native-webview": "11.14.4",
    "react-query": "^3.34.14",
    "react-redux": "7.2.2",
    "recompose": "^0.30.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "remove": "^0.1.5",
    "reselect": "^4.0.0",
    "safe-buffer": "^5.2.1",
    "stream-browserify": "3.0.0",
    "tinycolor2": "1.4.2",
    "ts-node": "^10.4.0",
    "url": "^0.11.0",
    "util": "0.12.4",
    "uuid": "^3.3.2",
    "vm-browserify": "1.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/runtime": "^7.15.4",
    "@emurgo/cardano-serialization-lib-nodejs": "^9.1.0",
    "@emurgo/yoroi-lib-core": "^0.0.1-alpha.10",
    "@storybook/addon-actions": "5.3.14",
    "@storybook/addon-knobs": "5.3.14",
    "@storybook/addon-links": "5.3.14",
    "@storybook/addon-ondevice-actions": "5.3.14",
    "@storybook/addon-ondevice-knobs": "5.3.14",
    "@storybook/addons": "^5.3.22",
