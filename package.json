    "@react-navigation/native": "^6.0.8",
    "@react-navigation/routers": "^6.1.0",
    "@react-navigation/stack": "^6.1.1",
    "@sentry/react-native": "3.3.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@unstoppabledomains/resolution": "6.0.3",
    "@v-almonacid/react-native-hid": "5.15.4",
