{
  "name": "emurgo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "flow": "flow",
    "lint": "eslint --max-warnings=0 ./src && prettylint \"src/**/*.js\" --config src/.prettierrc",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "babel": "babel src",
    "prettify": "prettier --write \"src/**/*.js\" --config src/.prettierrc",
    "setup_configs": "react-native-schemes-manager all",
    "manage-translations": "node ./translations/translation-runner.js",
    "purge-translations": "rimraf ./translations/messages",
    "android-bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "inhibit-warnings": "react-native-inhibit-warnings",
    "postinstall": "react-native-inhibit-warnings && npx jetify",
    "e2e:test-ios": "detox test -c ios.release",
    "e2e:build-ios": "detox build -c ios.release",
    "e2e:test-android": "detox test -c android.emu.mainnet.release",
    "e2e:build-android": "detox build -c android.emu.mainnet.release",
    "prestorybook": "rnstl  --searchDir ./src/components --pattern '**/*.stories.js'",
    "storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook"
  },
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.4.5",
    "@babel/node": "7.0.0",
    "@babel/runtime": "7.4.5",
    "@react-native-community/async-storage": "1.5.1",
    "babel-eslint": "^10.0.1",
    "base-x": "3.0.4",
    "bignumber.js": "^7.2.1",
    "bip39": "^2.5.0",
    "bluebird": "^3.5.2",
    "bs58": "^4.0.1",
    "crypto-random-string": "^1.0.0",
    "emip3js": "Emurgo/emip3js",
    "es6-error": "^4.1.1",
    "es6-symbol": "^3.1.1",
    "eslint": "^5.6.1",
    "eslint-config-vacuumlabs": "1.5.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.3.0",
    "events": "^3.0.0",
    "flow-typed": "^2.5.1",
    "immer": "^1.7.2",
    "intl": "^1.2.5",
    "localized-strings": "^0.2.0",
    "lodash": "^4.17.13",
    "moment": "^2.22.2",
    "net": "^1.0.2",
    "node-cardano-wallet": "https://github.com/Emurgo/node-cardano-wallet.git",
    "node-fetch": "^2.2.0",
    "p-limit": "^2.0.0",
    "path-browserify": "^1.0.0",
    "react": "16.8.3",
    "react-intl": "^2.8.0",
    "react-markdown": "^4.0.6",
    "react-native": "0.59.10",
    "react-native-background-timer": "^2.1.1",
    "react-native-camera": "^1.3.0",
    "react-native-cardano": "https://github.com/Emurgo/react-native-cardano.git",
    "react-native-chain-libs": "Emurgo/react-native-chain-libs",
    "react-native-config": "^0.11.7",
    "react-native-crypto": "^2.1.2",
    "react-native-device-info": "2.3.2",
    "react-native-easy-markdown": "1.4.1",
    "react-native-fs": "^2.11.18",
    "react-native-keychain": "3.0.0",
    "react-native-linear-gradient": "^2.4.2",
    "react-native-local-resource": "^0.1.3",
    "react-native-markdown-renderer": "^3.2.8",
    "react-native-qrcode": "^0.2.7",
    "react-native-qrcode-scanner": "^1.1.0",
    "react-native-randombytes": "^3.5.1",
    "react-native-sentry": "^0.42.0",
    "react-native-splash-screen": "^3.1.1",
    "react-native-svg": "^7.2.0",
    "react-navigation": "^2.17.0",
    "react-redux": "^5.0.7",
    "recompose": "^0.30.0",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "safe-buffer": "^5.1.2",
    "stream-browserify": "^2.0.1",
    "url": "^0.11.0",
    "util": "^0.11.0",
    "uuid": "^3.3.2",
    "vm-browserify": "^1.1.0"
  },
  "devDependencies": {
    "@emurgo/js-chain-libs-node": "git+https://github.com/SebastienGllmt/js-chain-libs-node-pkg.git",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react-native": "^5.3.14",
    "@storybook/react-native-server": "^5.3.14",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-require-context-hook": "^1.0.0",
    "detox": "15.4.2",
    "eslint-plugin-flowtype": "3.12.1",
    "extract-react-intl-messages": "^0.14.0",
    "flow-bin": "0.92",
    "jest": "24.8.0",
    "jetifier": "^1.6.4",
    "metro-react-native-babel-preset": "0.54.1",
    "prettier": "1.14.3",
    "prettylint": "1.0.0",
    "react-dom": "16.8.3",
    "react-intl-translations-manager": "^5.0.3",
    "react-native-inhibit-warnings": "https://github.com/Emurgo/react-native-inhibit-warnings.git",
    "react-native-schemes-manager": "^1.0.5",
    "react-native-storybook-loader": "^1.8.1",
    "react-test-renderer": "16.8.3"
  },
  "resolutions": {
    "base-x": "3.0.4"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "preset": "react-native",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(test).[jt]s?(x)"
    ]
  },
  "xcodeSchemes": {
    "Debug": [
      "Staging.Debug"
    ],
    "Release": [
      "Staging.Release"
    ]
  },
  "engineStrict": true,
  "engine": {
    "node": "~10.14.2",
    "npm": "~6.4.1"
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.release": {
        "binaryPath": "./ios/build/Build/Products/Release-iphonesimulator/emurgo.app",
        "build": "xcodebuild -workspace ios/emurgo.xcworkspace -configuration release -scheme emurgo -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 11"
      },
      "android.emu.mainnet.debug": {
        "binaryPath": "android/app/build/outputs/apk/mainnet/debug/app-mainnet-debug.apk",
        "build": "cd android && ./gradlew assembleMainnetDebug assembleMainnetDebugAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_6_API_28_2_e2e_"
        }
      },
      "android.emu.mainnet.release": {
        "binaryPath": "android/app/build/outputs/apk/mainnet/release/app-mainnet-release.apk",
        "build": "cd android && ./gradlew assembleMainnetRelease assembleMainnetReleaseAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_6_API_28_2_e2e_"
        }
      }
    }
  }
}
