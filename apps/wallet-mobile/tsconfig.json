{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noErrorTruncation": true,
    "allowJs": false,
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "types": ["react", "react-native", "jest", "node", "chai"],
    "baseUrl": ".",
    "paths": {
      "*.md": ["text-loader"]
    }
  },
  "include": ["./.d.ts", "./src", ".storybook/decorators", "./e2e"]
}
